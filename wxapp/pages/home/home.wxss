/* home.wxss */
page{
  display: block;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: 100%;
  background-color: rgb(232,233,230);
}
.title{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  width: 100%;
  height: 70rpx;
  background-color: rgb(55, 42, 61);
  color: white;
}
.course{
  display: block;
  width: 94%;
  height: 300rpx;
  background-color: white;
  margin-left: 3%;
  margin-top: 10rpx;
  border-radius: 20rpx;
}
.coursename{
  display: flex;
  width: 100%;
  height: 150rpx;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  background-color: rgb(0, 190, 125);
  text-align: center;
  color: white;
}
.coursename .wenzi{
  display: block;
  width: 100%;
  height: 100rpx;
  margin-top: 25rpx;
  position: relative;
}
.coursemessage{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  width: 100%;
  height: 145rpx;
  color: rgb(182,165,171);
}
.neirong{
  display: block;
  width: 94%;
  background-color: white;
  margin-left: 3%;
  margin-top: 10rpx;
  align-items: center;
}
.neirong .item{
  display: block;
  width: 94%;
  margin-left: 3%;
  margin-top: 5rpx;
  background-color: rgb(240, 240, 240);
}