.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.search{
  display: block;
  width: 100%;
  height:240px;
  margin-top: 20px;
}
.flex-view-item{
  display: block;
  width: 80%;
  margin-left: 10%;
  height: 50px;
  line-height: 50px;
  margin-top: 10px;
  text-align: center;
  border: solid 1rpx rgb(230,230,230);
  border-radius: 5px;
}